<mvc:View controllerName="com.training.exer1fadlen.controller.MainView"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core">
    <Page id="page" title="{i18n>title}" floatingFooter="true">
        <content>
            <VBox id="idVBox" class="sapUiSmallMargin">
                <f:SimpleForm 
                    id="idSimpleForm" 
                    editable="true" 
                    layout="ResponsiveGridLayout" 
                    title="Details" 
                    labelSpanXL="3" labelSpanL="3" labelSpanM="3" labelSpanS="12" 
                    adjustLabelSpan="false" 
                    emptySpanXL="4" emptySpanL="4" emptySpanM="4" emptySpanS="0" 
                    columnsXL="1" columnsL="1" columnsM="1" 
                    singleContainerFullSize="false">
                    <f:content>
                        <Label id="idLblFName" text="{i18n>firstNameLbl}" />
                        <Input id="idInptFName" value="" />
                        <Label id="idLblLName" text="{i18n>lastNameLbl}" />
                        <Input id="idInptLName" value="" />
                        <Label id="idLblMOP" text="{i18n>modeOfPymntLbl}" />
                        <Select id="idSelMOP" forceSelection="false" change="onChangeMOP">
                            <items>
                                <core:Item id="idItmCOD" text="{i18n>codTxt}" key="COD"/>
                                <core:Item id="idItmCC" text="{i18n>ccTxt}" key="CC"/>
                                <core:Item id="idItmGCash" text="{i18n>gcashTxt}" key="GCASH"/>
                            </items>
                        </Select>

                        <!-- GCASH -->
                        <Label id="idLblPhone" text="{i18n>phoneNmbrLbl}" visible="false"/>
                        <Input id="idInputPhone" value="" visible="false"/>

                        <!-- Credit CArd -->
                        <Label id="idLblCardName" text="{i18n>cardHoldernameLbl}" visible="false"/>
                        <Input id="idInputCardName" value="" visible="false"/>
                        <Label id="idLblAccNum" text="{i18n>accNumberLbl}" visible="false"/>
                        <Input id="idInputAccNum" value="" visible="false"/>
                        <Label id="idLblExpDate" text="{i18n>expDateLbl}" visible="false"/>
                        <Input id="idInputExpDate" value="" visible="false">
                            <layoutData>
                                <l:GridData id="gridInputExpDate" span="XL2 L2 M2 S12"/>
                            </layoutData>
                        </Input>
                        <Label id="idLblCvv" text="{i18n>cvvLbl}" visible="false">
                            <layoutData>
                                <l:GridData id="gridLblCvv" span="XL1 L1 M1"/>
                            </layoutData>
                        </Label>
                        <Input id="idInputCvv" value="" visible="false">
                            <layoutData>
                                <l:GridData id="gridInputCvv" span="XL2 L2 M2 S12"/>
                            </layoutData>
                        </Input>

                    </f:content>
                </f:SimpleForm>

                <Table id="idTableSCart" inset="false">
                    <headerToolbar>
                        <OverflowToolbar id="idOFT">
                            <content>
                                <Title id="idTableTitleSCart" text="{i18n>addShoppingCartTxt}"/>
                                <ToolbarSpacer id="idTSpacer"/>
                                <Button id="idBtnAddItems" icon="sap-icon://cart-4" tooltip="Add to Cart"
                                press="onAddItem"/>
                            </content>
                        </OverflowToolbar>
                    </headerToolbar>
                    <columns>
                        <Column id="idCol1">
                            <Text id="idColText1" text="{i18n>headerItem}" />
                        </Column>
                        <Column id="idCol2">
                            <Text id="idColText2" text="{i18n>headerQty}" />
                        </Column>
                        <Column id="idCol3">
                            <Text id="idColText3" text="{i18n>headerPrice}" />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem id="idColListItem1" vAlign="Middle">
                            <cells>
                                <Text id="idText1" text="{i18n>idItem1}" />
                                <Text id="idText2" text="{i18n>idQty1}" />
                                <Text id="idText3" text="{i18n>idPrice1}" />
                            </cells>
                        </ColumnListItem>
                        <ColumnListItem id="idColListItem2" vAlign="Middle">
                            <cells>
                                <Text id="idText4" text="{i18n>idItem2}" />
                                <Text id="idText5" text="{i18n>idQty2}" />
                                <Text id="idText6" text="{i18n>idPrice2}" />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
        </content>
        <footer>
            <OverflowToolbar id="idOFTFooter">
                <ToolbarSpacer id="idTSpacerFooter"/>
                <Button id="idBtnCheckout" text="{i18n>addChckOutBtn}" tooltip="Check Out" press="onPressCheckout"/>
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>